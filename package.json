{
    "name": "hlint",
    "displayName": "hlint",
    "description": "Lint Haskell with Hlint",
    "version": "0.3.0",
    "homepage": "https://marketplace.visualstudio.com/items?itemName=lunaryorn.hlint",
    "bugs": "https://github.com/lunaryorn/vscode-hlint/issues",
    "author": {
        "name": "Sebastian Wiesner",
        "email": "swiesner@lunaryorn.com",
        "url": "http://www.lunaryorn.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/lunaryorn/vscode-hlint.git"
    },
    "license": "GPL-3.0",
    "publisher": "lunaryorn",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Linters",
        "Languages",
        "Formatters"
    ],
    "keywords": [
        "haskell",
        "hlint",
        "refactor"
    ],
    "badges": [
        {
            "url": "https://travis-ci.org/lunaryorn/vscode-hlint.svg?branch=master",
            "href": "https://travis-ci.org/lunaryorn/vscode-hlint",
            "description": "Build Status"
        }
    ],
    "activationEvents": [
        "onLanguage:haskell"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "haskell",
                "aliases": [
                    "Haskell",
                    "haskell"
                ],
                "extensions": [
                    ".hs",
                    ".lhs"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "lint": "tslint --project tslint.json"
    },
    "devDependencies": {
        "@types/node": "^6.0.40",
        "tslint": "^5.2.0",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    }
}